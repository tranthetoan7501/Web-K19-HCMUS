




<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="heading">
    <span>-----*****-----</span>
    <h3>Accounts of customers </h3>
    
</div>

<table style="font-size:15px; width:100%" class="">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Option</th>
      {{!-- <th scope="col">Role</th> --}}
    </tr>
  </thead>
  <tbody id="tbody-userAccounts">
    {{#each user}}
    <tr>
      
      {{!-- <th scope="row"><a class="mini-btn" href="/product/{{this.category}}/{{this.slug}}">{{sum @index 1}}</a></th> --}}
      <td>
        <img class="mini-img" src="{{this.image}}" alt="">
      </td>
      <td>{{this.name}}</td>
      <td>{{this.username}}</td>
      <td>{{this.role}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>
        <form class="banform" method="get" action="">
            <input class="username" type="hidden" name="username" value="{{this.username}}">
            <input class="option" type="hidden" name="option" value="{{this.view}}">
            {{#if this.ban}}
            <input class="option" type="hidden" name="option" value="Unban">
            <input type="submit" class="mini-btn" value="Unban">
            {{else}}
            <input class="option" type="hidden" name="option" value="Ban">
            <input type="submit" class="mini-btn" value="Ban">
            {{/if}}
        </form>
        <form method="get" action="/admin/userAccounts/view">
        <input type="hidden" name="username" value="{{this.username}}">
          <input type="submit" class="mini-btn" value="View AccountS">
        </form>
        
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<nav style="margin-top: 4em;" aria-label="...">
    <ul class="pagination pagination-lg justify-content-center"">
        {{#each totalPageArr}}
            {{#if this.isCurrent}}
                <li class="page-item active"><a class="page-link" href="/admin/userAccounts?page={{this.value}}">{{this.value}}</a></li>
            {{else}}
                <li class="page-item"><a class="page-link" href="/admin/userAccounts?page={{this.value}}">{{this.value}}</a></li>
            {{/if}}
        {{/each}} 
    </ul>
</nav>

<script id="userAccounts-template" type="text/x-handlebars">
  \{{#each user}}
    <tr>
      <td>
        <img class="mini-img" src="\{{this.image}}" alt="">
      </td>
      <td>\{{this.name}}</td>
      <td>\{{this.username}}</td>
      <td>\{{this.role}}</td>
      <td>\{{this.email}}</td>
      <td>\{{this.phoneNumber}}</td>
      <td>
        <form class="banform" method="get" action="">
            <input class="username" type="hidden" name="username" value="\{{this.username}}">
            
            \{{#if this.ban}}
            <input class="option" type="hidden" name="option" value="Unban">
            <input type="submit" class="mini-btn" value="Unban">
            \{{else}}
            <input class="option" type="hidden" name="option" value="Ban">
            <input type="submit" class="mini-btn" value="Ban">
            \{{/if}}
        </form>
        <form method="get" action="/admin/userAccounts/view">
          <input type="hidden" name="username" value="{{this.username}}">
          <input type="submit" class="mini-btn" value="View AccountS">
        </form>
        
      </td>
    </tr>
  \{{/each}}
</script>
