<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<table style="font-size:15px; width:100%" class="">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Role</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Date of birth</th>
      {{!-- <th scope="col">Role</th> --}}
    </tr>
  </thead>
  <tbody id="tbody-userAccounts">
    {{#each user}}
    <tr>
      
      {{!-- <th scope="row"><a class="mini-btn" href="/product/{{this.category}}/{{this.slug}}">{{sum @index 1}}</a></th> --}}
      <td>{{this._id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.username}}</td>
      <td>{{this.role}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>
        <form class="banform" method="get" action="">
            <input class="username" type="hidden" name="username" value="{{this.username}}">
            <input class="option" type="hidden" name="option" value="{{this.view}}">
            <input type="submit" class="mini-btn" value="{{this.view}}">
        </form>
        <a href="" class="mini-btn" >Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script id="userAccounts-template" type="text/x-handlebars">
  \{{#each user}}
    <tr>
      <td>\{{this._id}}</td>
      <td>\{{this.name}}</td>
      <td>\{{this.username}}</td>
      <td>\{{this.role}}</td>
      <td>\{{this.email}}</td>
      <td>\{{this.phoneNumber}}</td>
      <td>
        <form class="banform" method="get" action="">
            <input class="username" type="hidden" name="username" value="\{{this.username}}">
            <input class="option" type="hidden" name="option" value="\{{this.view}}">
            <input type="submit" class="mini-btn" value="\{{this.view}}">
        </form>
        <a href="" class="mini-btn" >Delete</a>
      </td>
    </tr>
  \{{/each}}
</script>
