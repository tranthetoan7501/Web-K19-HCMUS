<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="heading">
    <span>-----*****-----</span>
    <h3>accounts of admins</h3>
    
</div>

<table style="font-size:15px; width:100%" class="">
  <thead>
    <tr>
      <th scope="col">Serial</th>
      <th scope="col">Name</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      {{!-- <th scope="col">Date of birth</th> --}}
      <th scope="col">Role</th>
    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      {{!-- <th scope="row"><a class="mini-btn" href="/product/{{this.category}}/{{this.slug}}">{{sum @index 1}}</a></th> --}}
      <td>{{sum @index 1}}</td>
      <td>{{this.name}}</td>
      <td>{{this.username}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phoneNumber}}</td>
      {{!-- <td>
        <a href="" class="mini-btn" >active</a>
      </td> --}}
      {{#if this.key}}
        <td>Super Admin</td>
      {{else}}
        <td>Admin</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

<nav style="margin-top: 4em;" aria-label="...">
    <ul class="pagination pagination-lg justify-content-center"">
        {{#each totalPageArr}}
            {{#if this.isCurrent}}
                <li class="page-item active"><a class="page-link" href="/admin/account?page={{this.value}}">{{this.value}}</a></li>
            {{else}}
                <li class="page-item"><a class="page-link" href="/admin/account?page={{this.value}}">{{this.value}}</a></li>
            {{/if}}
        {{/each}} 
    </ul>
</nav>


