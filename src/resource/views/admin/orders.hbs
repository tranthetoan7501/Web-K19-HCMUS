<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="heading">
    <span>-----*****-----</span>
    <h3>manage orders
        <a style = "color:green;"class="logo"> <i class="fa fa-truck"></i> </a>
    </h3>
    
</div>

<table style="font-size:15px; width:100%" class="">
  <thead>
    <tr>
      <th scope="col">Order ID</th>
      <th scope="col">Username</th>
      <th scope="col">Products</th>
      <th scope="col">Phonenumber</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">is Delivered</th>
      {{!-- <th scope="col">Role</th> --}}
    </tr>
  </thead>
  <tbody id="tbody-manageOrders">
    {{#each orders}}
    <tr>
      <td>{{this.orderId}}</td>
      <td>{{this.username}}</td>
      <td>
        <select style="max-width: 5.9em;">
            <option value="">Products</option>
            {{#each this.items}}
            <option value="">{{this.quantity}}-{{this.productName}}</option>
            {{/each}}    
        </select>
      </td>
      <td>{{this.phoneNumber}}</td>
      <td>{{this.email}}</td>
      <td>{{this.address}}</td>
      {{#if this.status}}
        <td>
            <form class="delivery-form" action="">
                <input class="id" type="hidden" name="id" value="{{this.orderId}}">
                <input class="status" type="hidden" name="status" value="false">
                <button style="background-color: transparent;" type="submit">
                    <a style = "color:green;font-size:2em;cursor:pointer" > <i class="fas fa-check-square"></i></a>
                </button>
            </form>
            
        </td>
      {{else}}
        <td>
            <form class="delivery-form" action="">
                <input class="id" type="hidden" name="id" value="{{this.orderId}}">
                <input class="status" type="hidden" name="status" value="true">
                <button style="background-color: transparent;" type="submit">
                    
                    <a style = "color:red; font-size:2em; cursor:pointer"> <i class="fas fa-minus-square"></i></a>
                </button>
            </form>
        </td>
      {{/if}}
     
    </tr>
    {{/each}}
  </tbody>
</table>

