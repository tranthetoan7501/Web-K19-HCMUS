<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<body>
    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    <div class="xValues" style="display:none;" > {{xValues}} </div>
    <div class="yValues" style="display:none;"> {{yValues}} </div>

    <script>
        var xValues = document.getElementsByClassName("xValues")[0].innerText.split(",");
        var yValues = document.getElementsByClassName("yValues")[0].innerText.split(",");
        var barColors = ["red", "green", "blue", "orange", "brown"];
        
        console.log("x", xValues);
        console.log("y", yValues);

        new Chart("myChart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "World Wine Production 2018"
                }
            }
        });
    </script>
</body>
